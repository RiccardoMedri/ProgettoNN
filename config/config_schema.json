{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project Configuration Schema",
  "type": "object",
  "properties": {
    "dataset": {
      "type": "object",
      "properties": {
        "images_dir": { "type": "string" },
        "annotations_dir": { "type": "string" },
        "classes_file": { "type": "string" },
        "annotation_format": { 
          "type": "string",
          "enum": ["yolo"]
        },
        "mean": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 3,
          "maxItems": 3
        },
        "std": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 3,
          "maxItems": 3
        },
        "val_split": { "type": "number", "minimum": 0.1},
        "test_split": { "type": "number", "minimum": 0.1},
        "dataset_yaml": { "tpye": "string"}
      },
      "required": ["images_dir", "annotations_dir", "classes_file", "annotation_format"]
    },
    "training": {
      "type": "object",
      "properties": {
        "batch_size": { "type": "integer", "minimum": 1 },
        "lr": { "type": "number", "exclusiveMinimum": 0 },
        "epochs": { "type": "integer", "minimum": 1 },
        "weight_decay": { "type": "number", "minimum": 0 }
      },
      "required": ["batch_size", "lr", "epochs"]
    },
    "model": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "input_size": { "type": "integer", "minimum": 1 },
        "num_classes": { "type": "integer", "minimum": 1 }
      },
      "required": ["name", "input_size", "num_classes"]
    },
    "paths": {
      "type": "object",
      "properties": {
        "output_dir": { "type": "string" },
        "weights_dir": { "type": "string" },
        "logs_dir": { "type": "string" }
      },
      "required": ["output_dir", "weights_dir", "logs_dir"]
    },
    "seed": { "type": "integer" }
  },
  "required": ["dataset", "training", "model", "paths"]
}